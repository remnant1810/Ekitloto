# Auto detect text files and perform LF normalization
* text=auto

# Force these files to be CRLF on checkout
*.bat           text eol=crlf
*.cmd           text eol=crlf
*.ps1           text eol=crlf
*.sh            text eol=lf

# Force these files to be LF on checkout
*.dart          text eol=lf
*.yaml          text eol=lf
*.yml           text eol=lf
*.gradle        text eol=lf
*.kt            text eol=lf
*.java          text eol=lf
*.xml           text eol=lf
*.json          text eol=lf
*.md            text eol=lf
*.js            text eol=lf
*.ts            text eol=lf
*.html          text eol=lf
*.css           text eol=lf
*.scss          text eol=lf
*.dart.js       text eol=lf

# Binary files should not be modified
*.png           binary
*.jpg           binary
*.jpeg          binary
*.gif           binary
*.ico           binary
*.svg           binary
*.ttf           binary
*.otf           binary
*.woff          binary
*.woff2         binary
